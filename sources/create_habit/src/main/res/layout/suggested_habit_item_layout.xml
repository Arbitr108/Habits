<?xml version="1.0" encoding="utf-8"?>
<com.green.habits.createhabit.SuggestedHabitItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/suggestedHabitIcon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        tools:srcCompat="@tools:sample/avatars[0]" />

    <TextView
        android:id="@+id/suggestedHabitTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="TextView" />

</com.green.habits.createhabit.SuggestedHabitItemView>